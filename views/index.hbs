  <div class="container text-center jumbotron" style="background-color: wheat;">

    <h2>Calculator</h2>
    <input type="button" class="btn btn-block" id="tf"></input>
    <table style="position: relative; top:10px">
      <tr>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(1)">1</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(2)">2</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(3)">3</button></td>
        <td><button class="btn btn-danger" style="font-size: 30px; width: 70px; height: 50px;" id="del"
            onclick="cut()">&times;</button></td>
      </tr>
      <tr>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(4)">4</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(5)">5</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(6)">6</button></td>
        <td><button class="btn btn-danger" style="font-size: 30px; width: 70px; height: 50px;" id="clear"
            onclick="document.getElementById('tf').value=null;">C</button></td>
      </tr>
      <tr>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(7)">7</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(8)">8</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(9)">9</button></td>
        <td><button class="btn btn-primary" style="font-size: 30px; width: 70px; height: 50px;" id="eq"
            onclick="document.getElementById('tf').value = eval(document.getElementById('tf').value)">=</button>
        </td>
      </tr>
      <tr>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert('.')">.</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert(0)">0</button></td>
        <td><button class="btn btn-info" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert('00')">00</button></td>
        <td><button class="btn btn-primary" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert('%')">%</button></td>
      </tr>
      <tr>
        <td><button class="btn btn-primary" style="font-size: 30px; width: 70px; height: 50px;"
            onclick="insert('+')">+</button></td>
        <td><button class="btn btn-primary" style="font-size: 30px; width: 70px; height: 50px;"
