<div id="carousel">
  <side><i class="fas fa-volume-up" id="vol"></i></side>
  <h4>Happy Birthday {{res.name}} ðŸ’–</h4>

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2500"
    data-pause="false">

    <ol class="carousel-indicators">
      {{#each res.img}}
      <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}" class="active"></li>
      {{/each}}
    </ol>

    <div class="carousel-inner text-center">

      <div class="carousel-item active">
        <img src="https://rukminim1.flixcart.com/image/416/416/jz5vjbk0/balloon/w/t/7/5-big-sized-cake-shaped-foil-balloon-for-birthday-decoratio-original-imaf9xe5fuxhxhsz.jpeg" class="caserolimg" alt="cake">
      </div>

      {{#each res.img}}
      <div class="carousel-item">
        <img src="{{this}}" class="caserolimg" alt="...">
      </div>
      {{/each}}

    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</div>

<audio autoplay loop>
  <source src="/audio/song.mp3" type="audio/mpeg">
</audio>
<script>
  let isPlaying = true
  $('#vol').click(() => {
    let music = document.getElementsByTagName('audio')[0]
    if(isPlaying) {
      music.pause()
      isPlaying = false
    } else{
      music.play()
      isPlaying = true
    }
  })
</script>
